@model GestionExpedientes.Models.Alumno

@{
    ViewData["Title"] = "Detalles del Alumno";
}

<h1>@ViewData["Title"]</h1>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h4> Información Personal</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre Completo</dt>
            <dd class="col-sm-9">@Model.Nombre @Model.Apellido</dd>

            <dt class="col-sm-3">Fecha de Nacimiento</dt>
            <dd class="col-sm-9">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Grado</dt>
            <dd class="col-sm-9">@Model.Grado</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.AlumnoId" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>

<!-- Sección de Expedientes Académicos -->
<div class="card">
    <div class="card-header bg-success text-white">
        <h4> Expediente Académico</h4>
    </div>
    <div class="card-body">
        @if (Model.Expedientes == null || !Model.Expedientes.Any())
        {
            <div class="alert alert-warning">
                <strong>Sin expedientes</strong> - Este alumno no tiene materias registradas aún.
            </div>
            <a asp-controller="Expedientes" asp-action="Create" class="btn btn-primary">
                Agregar Materia
            </a>
        }
        else
        {
            <!-- Estadísticas del alumno -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6>Materias Cursadas</h6>
                            <h3 class="text-primary">@Model.Expedientes.Count()</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6>Promedio General</h6>
                            <h3 class="text-success">@Model.Expedientes.Average(e => e.NotaFinal).ToString("F2")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6>Nota Más Alta</h6>
                            <h3 class="text-info">@Model.Expedientes.Max(e => e.NotaFinal).ToString("F2")</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla de materias y notas -->
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Materia</th>
                        <th>Docente</th>
                        <th>Nota Final</th>
                        <th>Observaciones</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expediente in Model.Expedientes.OrderByDescending(e => e.NotaFinal))
                    {
                        string estadoClass = "";
                        string estadoTexto = "";

                        if (expediente.NotaFinal >= 9)
                        {
                            estadoClass = "success";
                            estadoTexto = "Excelente";
                        }
                        else if (expediente.NotaFinal >= 7)
                        {
                            estadoClass = "primary";
                            estadoTexto = "Aprobado";
                        }
                        else if (expediente.NotaFinal >= 6)
                        {
                            estadoClass = "warning";
                            estadoTexto = "Regular";
                        }
                        else
                        {
                            estadoClass = "danger";
                            estadoTexto = "Reprobado";
                        }

                        <tr>
                            <td><strong>@expediente.Materia?.NombreMateria</strong></td>
                            <td>@expediente.Materia?.Docente</td>
                            <td>
                                <span class="badge bg-@estadoClass fs-6">@expediente.NotaFinal</span>
                            </td>
                            <td>@expediente.Observaciones</td>
                            <td>
                                <span class="badge bg-@estadoClass">@estadoTexto</span>
                            </td>
                            <td>
                                <a asp-controller="Expedientes" asp-action="Edit" asp-route-id="@expediente.ExpedienteId"
                                   class="btn btn-sm btn-warning">Editar</a>
                                <a asp-controller="Expedientes" asp-action="Details" asp-route-id="@expediente.ExpedienteId"
                                   class="btn btn-sm btn-info">Ver</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Botón para agregar otro expediente -->
            <div class="mt-3">
                <a asp-controller="Expedientes" asp-action="Create" class="btn btn-primary">
                    Agregar Nuevo Expediente
                </a>
            </div>
        }
    </div>
</div>