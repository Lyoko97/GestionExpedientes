@model GestionExpedientes.Models.Expediente

@{
    ViewData["Title"] = "Crear Expediente";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="AlumnoId" class="control-label">Alumno</label>
                <select asp-for="AlumnoId" class="form-control form-select" asp-items="ViewBag.AlumnoId">
                    <option value="">-- Seleccione un alumno --</option>
                </select>
                <span asp-validation-for="AlumnoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MateriaId" class="control-label">Materia</label>
                <select asp-for="MateriaId" class="form-control form-select" asp-items="ViewBag.MateriaId">
                    <option value="">-- Seleccione una materia --</option>
                </select>
                <span asp-validation-for="MateriaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NotaFinal" class="control-label">Nota Final</label>
                <input asp-for="NotaFinal" class="form-control" type="number" step="0.01" min="0" max="10" />
                <span asp-validation-for="NotaFinal" class="text-danger"></span>
                <small class="form-text text-muted">Ingrese una nota entre 0 y 10</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="control-label">Observaciones</label>
                <textarea asp-for="Observaciones" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}