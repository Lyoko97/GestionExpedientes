@model GestionExpedientes.Models.Expediente

@{
    ViewData["Title"] = "Eliminar Expediente";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">¿Está seguro que desea eliminar este expediente?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4>Datos del Expediente a Eliminar</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Alumno</dt>
            <dd class="col-sm-9">@Model.Alumno.Nombre @Model.Alumno.Apellido</dd>

            <dt class="col-sm-3">Materia</dt>
            <dd class="col-sm-9">@Model.Materia.NombreMateria</dd>

            <dt class="col-sm-3">Nota Final</dt>
            <dd class="col-sm-9">@Model.NotaFinal</dd>

            <dt class="col-sm-3">Observaciones</dt>
            <dd class="col-sm-9">@Model.Observaciones</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="ExpedienteId" />
    <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>