@model IEnumerable<GestionExpedientes.Models.Expediente>

@{
    ViewData["Title"] = "Expedientes Académicos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Expediente</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Alumno</th>
            <th>Materia</th>
            <th>Nota Final</th>
            <th>Observaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Alumno.Nombre @item.Alumno.Apellido</td>
                <td>@item.Materia.NombreMateria</td>
                <td>
                    <span class="badge bg-primary">@item.NotaFinal</span>
                </td>
                <td>@item.Observaciones</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExpedienteId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ExpedienteId" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.ExpedienteId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>